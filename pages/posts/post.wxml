<import src="/pages/posts/post-item/post-item-template.wxml" />
<view>
  <swiper indicator-dots="true" autoplay='true' interval='5000' indicator-color="rgba(255,255,255,1)" indicator-active-color="rgba(255,255,0,1)" vertical='{{false}}'>
    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:for-item="item" wx:key="unique" wx:for-index="idx">
    <view catchtap="onPostTap" data-postId="{{item.postId}}" data-postName="postName">
      <template is="postItem" data="{{...item}}" />
    </view>
  </block>
</view>